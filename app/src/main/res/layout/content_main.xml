<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:enabled="false"
        android:gravity="bottom"
        android:lines="1"
        android:maxLines="2"
        android:text="0.00"
        android:paddingTop="72sp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:rowCount="5"
        android:columnCount="4">

        <Button
            android:id="@+id/ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="AC"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/ce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="CE"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="%"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:text="/"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="7"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="8"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="9"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:text="*"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="4"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="5"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="6"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/dif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:text="-"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="1"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:text="2"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="3"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:text="+"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"

            />

        <Button
            android:id="@+id/bac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:text="â†"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/d0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:text="0"
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="."
            android:textSize="24sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"

            />






    </GridLayout>
</LinearLayout>